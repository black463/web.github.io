  <div class="container">
    <h1>Generator Prompt Video Promosi Produk</h1><label for="judul">Nama Produk</label>
<input type="text" id="judul" placeholder="Contoh: NR Payment">

<label for="jenis">Jenis Produk</label>
<input type="text" id="jenis" placeholder="Contoh: Aplikasi top-up dan e-wallet">

<label for="tujuan">Tujuan Promosi</label>
<input type="text" id="tujuan" placeholder="Contoh: Meningkatkan unduhan aplikasi">

<label for="fitur">Fitur Utama Produk</label>
<input type="text" id="fitur" placeholder="Contoh: Top-up game, pembayaran PLN, saldo e-wallet">

<label for="cta">Call to Action</label>
<input type="text" id="cta" placeholder="Contoh: Download sekarang di Play Store!">

<label for="dialog">Dialog Pendukung (opsional)</label>
<textarea id="dialog" rows="3" placeholder="Contoh:

User: Di mana tempat top-up tercepat? CS: Pakai NR Payment dong!"></textarea>

<button onclick="generatePrompt()">Buat Prompt</button>

<div id="output"></div>

  </div>  <script>
    function generatePrompt() {
      const judul = document.getElementById('judul').value;
      const jenis = document.getElementById('jenis').value.toLowerCase();
      const tujuan = document.getElementById('tujuan').value;
      const fitur = document.getElementById('fitur').value;
      const cta = document.getElementById('cta').value;
      const dialog = document.getElementById('dialog').value;

      let visualCue = "";
      if (jenis.includes("ebook")) {
        visualCue = "📖 Visual: Karakter sedang memegang eBook (tablet atau buku digital) dan membacanya dengan ekspresi antusias.";
      } else if (jenis.includes("aplikasi")) {
        visualCue = "📱 Visual: Karakter sedang memegang smartphone dan menggunakan aplikasi dengan tampilan antarmuka menarik.";
      } else {
        visualCue = "🎥 Visual: Karakter memperagakan penggunaan produk dengan ekspresi puas dan semangat.";
      }

      let prompt = "";

      prompt += `🎬 Judul: Promosi ${judul}
📌 Tema: Iklan modern dan profesional untuk pasar Indonesia
🧩 Jenis Produk: ${jenis}
🎯 Tujuan: ${tujuan}
🎯 Target Audiens: Masyarakat Indonesia (remaja & dewasa)
💡 Fitur Utama: ${fitur}
${visualCue}
🎞️ Gaya Visual: Cerah, lokal, modern, dengan sentuhan khas Indonesia
📷 Kamera: Zoom ke fitur, panning ke UI aplikasi (jika relevan)
🎧 Musik: Upbeat modern dengan nuansa lokal
🌫️ Mood: Semangat, percaya diri
🎙️ Narasi: Menggunakan Bahasa Indonesia, membahas keunggulan produk
`;
      if (dialog.trim()) {
        prompt += `🗣️ Dialog:
${dialog}
`;
      }
      prompt += `🎁 CTA: ${cta}
⏱️ Durasi: 8 detik`;

      document.getElementById('output').innerText = prompt;
    }
  </script></body>
